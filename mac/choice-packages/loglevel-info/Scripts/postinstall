#!/bin/bash
set -euo pipefail

CHOICE_DIR="/Library/Logs/GnosisVPN/installer"
CHOICE_FILE="${CHOICE_DIR}/loglevel_choice"
SELECTED_LOGLEVEL="info"

mkdir -p "$CHOICE_DIR"
chmod 755 "$CHOICE_DIR"

cat > "$CHOICE_FILE" <<EOF
INSTALLER_CHOICE_LOGLEVEL="$SELECTED_LOGLEVEL"
EOF

chmod 600 "$CHOICE_FILE"
